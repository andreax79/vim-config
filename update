#!/bin/bash -
# Switch to the `~/.vim` directory
cd ~/.vim
# Pull
git pull
#
mkdir -p bundle
if [ ! -d "bundle/Vundle.vim" ]; then
  # Fetch Vundle
  git clone https://github.com/gmarik/Vundle.vim.git ~/.vim/bundle/Vundle.vim
else
  # Update Vundle
  cd bundle/Vundle.vim
  git pull
  cd ../..
fi
pwd
# Install/update/remove bundles
vim -u install.vim +BundleInstall +qall
vim -u install.vim +BundleUpdate +qall
vim -u install.vim +BundleClean +qall
